<?xml version="1.0" encoding="UTF-8"?>
<extension id="tracker" status="released" xmlns="http://getsymphony.com/schemas/extension/1.0">
	<name>Tracker</name>
	<description>Track user and system activity</description>
	<repo type="github">https://github.com/symphonists/tracker</repo>
	<url type="issues">https://github.com/symphonists/tracker/issues</url>
	<types>
		<type>Workflow</type>
		<type>Audit</type>
		<type>Log</type>
	</types>
	<authors>
		<author>
			<name github="cz" symphony="czheng">Craig Zheng</name>
		</author>
		<author>
			<name github="symphonists">Symphony Community</name>
		</author>
	</authors>
	<releases>
		<release version="1.5.1" date="2017-03-20" min="2.5.x" max="2.x.x">
			- PHP7 fix
		</release>
		<release version="1.5.0" date="2016-03-10" min="2.5.x" max="2.x.x">
			- Added support for notifying multiple URLs
			- Log entry delete events
			- Use `EntryPreDelete` instead of `EntryPostDelete`
			- Minor bug fixes
		</release>
		<release version="1.4.0" date="2015-06-24" min="2.5" max="2.6.x">
			- Fixed author deletion
			- Added tracking of front-end members
			- Updated interface to highlight create and delete actions
		</release>
		<release version="1.3.0" date="2015-06-08" min="2.4" max="2.6.x">
			- Fixed compatibility with Symphony's XSRF
			- Added Slovak translation
		</release>
		<release version="1.2.2" date="2015-06-04" min="2.4">
			- Bug fix, add right data attributes to table
		</release>
		<release version="1.2.1" date="2014-06-17" min="2.4">
			- Code style clean-up
		</release>
		<release version="1.2.0" date="2014-03-18" min="2.4">
			- Symphony 2.4 compatibility
		</release>
		<release version="1.1.1" date="2012-06-20" min="2.3" />
		<release version="1.1.0" date="2012-06-20" min="2.3">
			- Fixed compatibility issues with Symphony 2.3
			- Improved localisation capabilities
			- Updated German translation
			- Unfied code documentation
		</release>
		<release version="1.0.1" date="2012-05-16" min="2.3" />
		<release version="1.0.0" date="2012-05-16" min="2.3" />
		<release version="0.9.9" date="2011-05-11" min="2.1.0" />
	</releases>
</extension>
